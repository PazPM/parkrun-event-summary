{
  "manifest_version": 3,
  "name": "parkrun Event Summary",
  "version": "1.0.0",
  "description": "A tool for Run Directors or interested third parties to generate a nice infographic for sharing.",
  "icons": {
    "16": "i/logo16.png",
    "48": "i/logo48.png",
    "128": "i/logo128.png"
  },
  "content_scripts": [
    {
     "matches": ["https://*.parkrun.org.uk/*/results/*"],
      "js": ["src/lib/chart.js", "src/lib/labels.js", "src/plugins/milestones.js", "src/plugins/gender.js", "src/plugins/volunteers.js", "src/plugins/pb.js", "src/plugins/first.js", "src/script.js"],
      "run_at": "document_end",
      "css" : ["style.css"]
     }
  ],
  "web_accessible_resources": [
    {
      "resources": ["i/*.svg"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["activeTab"]
}
